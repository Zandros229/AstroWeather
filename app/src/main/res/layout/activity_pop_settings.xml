<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".PopSettings"
        android:background="@color/colorPrimary">
    <TextView
            android:text="longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/logitudeSettings1" android:textSize="20sp"
            android:textAlignment="center"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/longitudeSettings"/>
    <TextView
            android:text="latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/latitudeSettings1" android:textSize="20sp"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/latitudeSettings"/>
    <TextView
            android:text="refresh rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="20sp"
            android:textAlignment="center"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/settingsSpinner"/>

</android.support.v7.widget.LinearLayoutCompat>