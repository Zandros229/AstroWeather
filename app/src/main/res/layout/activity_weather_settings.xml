<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".WeatherSettings"
        android:background="@color/colorPrimary">
    <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/NameSettings1" android:textSize="20sp"
            android:textAlignment="center"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/NameSettings"/>
    <TextView
            android:text="favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="20sp"
            android:textAlignment="center"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/weatherSpinner"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switchWeatherSettings"
            android:layout_gravity="center_horizontal" android:textOn="K" android:textOff="C" tools:checked="false"
            android:checked="false" android:switchMinWidth="70dp"/>

</android.support.v7.widget.LinearLayoutCompat>