<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#738DAF"
              tools:context=".MoonFragment" android:orientation="vertical">

    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/actualTimeMoon"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textStyle="bold|italic"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/moonRise"
                android:layout_width="279dp"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textSize="40sp"
                android:textStyle="italic"/>
        <TextView
                android:id="@+id/moonSet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="40sp"
                android:textStyle="italic"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Rise"
                android:textAlignment="center"
                android:textSize="35sp"/>
        <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Set"
                android:textAlignment="textEnd"
                android:textSize="35sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/longitudeMoon"
                android:layout_width="281dp"
                android:layout_height="match_parent"
                android:text=""
                android:textAlignment="textStart"
                android:textSize="40sp"
                android:textStyle="italic"/>
        <TextView
                android:id="@+id/latitudeMoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="textEnd"
                android:textSize="40sp"
                android:textStyle="italic"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/dlugosc_geograficzna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="longitude"
                android:textAlignment="center"
                android:textSize="35sp"/>
        <TextView
                android:id="@+id/szerokosc_geograficzna"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="latitude"
                android:textAlignment="textEnd"
                android:textSize="35sp"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/nextNewMoon"
                android:layout_width="279dp"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textSize="40sp"
                android:textStyle="italic"/>
        <TextView
                android:text="nextFullMoon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/nextFullMoon"
                android:textStyle="italic"
                android:textAlignment="textEnd"
                android:textSize="40sp" android:layout_marginLeft="75dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="the nearest new moon"
                android:textAlignment="center"
                android:textSize="35sp"/>
        <TextView
                android:text="the nearest full moon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textViewww"
                android:textAlignment="textEnd"
                android:textSize="35sp"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/illumination"
                android:layout_width="279dp"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textSize="40sp"
                android:textStyle="italic"/>
        <TextView
                android:id="@+id/synodicDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="40sp"
                android:textStyle="italic"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="phase of the moon"
                android:textAlignment="center"
                android:textSize="35sp"/>
        <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Month Day"
                android:textAlignment="textEnd"
                android:textSize="35sp"/>
    </LinearLayout>

</LinearLayout>