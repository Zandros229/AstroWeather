<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#738DAF"
              tools:context=".MoonFragment" android:orientation="vertical">

    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/actualTimeMoon"
            android:textAlignment="center"
            android:textSize="48sp"
            android:textStyle="bold"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:id="@+id/longitudeMoon"
                android:layout_width="281dp"
                android:layout_height="match_parent"
                android:text=""
                android:textAlignment="textStart"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="75dp"/>
        <TextView
                android:id="@+id/latitudeMoon"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text=""
                android:textAlignment="viewStart"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="75dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        <TextView
                android:id="@+id/dlugosc_geograficzna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Długość geograficzna"
                android:textAlignment="center"
                android:textSize="14sp" android:layout_marginLeft="75dp"/>
        <TextView
                android:id="@+id/szerokosc_geograficzna"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Szczerokość geograficzna"
                android:textAlignment="center"
                android:textSize="14sp" android:layout_marginLeft="90dp"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:id="@+id/moonRise"
                android:layout_width="279dp"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textSize="24sp"
                android:textStyle="bold" android:layout_marginLeft="75dp"/>
        <TextView
                android:id="@+id/moonSet"
                android:layout_width="301dp"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                android:textStyle="bold" android:layout_marginLeft="75dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Wchód"
                android:textAlignment="center"
                android:textSize="14sp" android:layout_marginLeft="75dp"/>
        <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Zachód"
                android:textAlignment="center"
                android:textSize="14sp" android:layout_marginLeft="60dp"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:id="@+id/nextNewMoon"
                android:layout_width="279dp"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textSize="24sp"
                android:textStyle="bold" android:layout_marginLeft="75dp"/>
        <TextView
                android:text="nextFullMoon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/nextFullMoon"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:textSize="24sp" android:layout_marginLeft="75dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Najbliższy nów"
                android:textAlignment="center"
                android:textSize="14sp" android:layout_marginLeft="75dp"/>
        <TextView
                android:text="Najbliższa pełnia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textViewww"
                android:textAlignment="center"
                android:textSize="14sp" android:layout_marginLeft="70dp"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:id="@+id/illumination"
                android:layout_width="279dp"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textSize="24sp"
                android:textStyle="bold" android:layout_marginLeft="75dp"/>
        <TextView
                android:id="@+id/synodicDay"
                android:layout_width="302dp"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="gravity"
                android:textSize="24sp"
                android:textStyle="bold" android:layout_marginLeft="75dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Faza księżyca"
                android:textAlignment="center"
                android:textSize="14sp" android:layout_marginLeft="75dp"/>
        <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Dzień miesiąca synodycznego"
                android:textAlignment="center"
                android:textSize="14sp" android:layout_marginLeft="180dp"/>
    </LinearLayout>

</LinearLayout>